@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>Order Confirmation</h2>
<p>Thank you for your order! Your food is being prepared.</p>

<div class="order-status">
    <div class="status">
        <div class="icon completed">
            <span class="checkmark">✓</span>
        </div>
        <div class="status-text">Order Received</div>
        <div class="time">Just Now</div>
    </div>

    <div class="status">
        <div class="icon completed">
            <span class="checkmark">✓</span>
        </div>
        <div class="status-text">Preparing</div>
        <div class="time">5 mins</div>
    </div>

    <div class="status">
        <div class="icon">
            <span class="checkmark">✓</span>
        </div>
        <div class="status-text">Out for Delivery</div>
        <div class="time">15 mins</div>
    </div>

    <div class="status">
        <div class="icon">
            <span class="checkmark">✓</span>
        </div>
        <div class="status-text">Delivered</div>
        <div class="time">30 mins</div>
    </div>
</div>

<div class="distance-info">
    <p>Delivery Distance: <strong>5 km</strong></p>
    <p>Delivery Address: <strong>Your address here</strong></p>
</div>

<style>
    .order-status {
        margin-top: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .status {
        display: flex;
        align-items: center;
        margin: 10px 0;
    }

    .icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border: 2px solid #ccc;
        position: relative;
        margin-right: 10px;
        text-align: center;
        line-height: 30px;
        font-size: 16px;
        color: #fff;
        background-color: #ccc;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .completed {
        background-color: #4CAF50; /* Green */
        border-color: #4CAF50;
    }

    .checkmark {
        display: inline-block;
        color: white;
        font-weight: bold;
        transition: opacity 0.3s;
    }

    .status-text {
        flex-grow: 1;
    }

    .time {
        font-size: 12px;
        color: #888;
    }

    .distance-info {
        margin-top: 20px;
    }
</style>

<script>
    // Simulate status updates (replace with real logic in production)
    let statuses = document.querySelectorAll('.status');
    let delay = 5000; // 5 seconds for each status update

    // Initial state
    setTimeout(() => {
        statuses[0].querySelector('.icon').classList.add('completed');
    }, delay);

    setTimeout(() => {
        statuses[1].querySelector('.icon').classList.add('completed');
    }, delay * 2);

    setTimeout(() => {
        statuses[2].querySelector('.icon').classList.add('completed');
    }, delay * 3);

    setTimeout(() => {
        statuses[3].querySelector('.icon').classList.add('completed');
    }, delay * 4);
</script>